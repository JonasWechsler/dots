    position top
    status_command ~/.i3/conky
	font pango:DejaVu Sans Mono 8
#	mode dock
    #status_command i3status
    #tray_output LVDS
	colors{
        background #2d2d2d
        statusline #dedede
        separator #dedede

		focused_workspace  #232323 #232323 #dedede
		active_workspace   #2d2d2d #5F676A #dedede
		inactive_workspace #2d2d2d #2d2d2d #888888
		urgent_workspace   #333333 #900000 #ffffff
    }
}

#Remove title bar
